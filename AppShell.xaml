<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:pages="clr-namespace:GardenCentreApp.Pages"
       x:Class="GardenCentreApp.AppShell">

    <!-- Login Route -->
    <ShellContent Title="Login"
                  Route="LoginPage"
                  ContentTemplate="{DataTemplate pages:LoginPage}" />

    <!-- Bottom Tab Navigation for ProductPage and BasketPage -->
    <TabBar>
        <ShellContent Title="Products"
                      Route="Products"
                      Icon="products.png"
                      ContentTemplate="{DataTemplate pages:ProductPage}" />
        <ShellContent Title="Basket"
                      Icon="basket.png"
                      ContentTemplate="{DataTemplate pages:BasketPage}" />
    </TabBar>
</Shell>