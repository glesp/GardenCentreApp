<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GardenCentreApp.Pages.LoginPage">
    <StackLayout Padding="20" VerticalOptions="Center">
        <Label Text="Login or Register" FontSize="24" HorizontalOptions="Center" />
        <Entry Placeholder="Name" x:Name="NameEntry" />
        <Entry Placeholder="Phone Number" x:Name="PhoneEntry" Keyboard="Telephone" />
        <Entry Placeholder="Password" x:Name="PasswordEntry" IsPassword="True" />
        <Button Text="Login" Clicked="OnLoginClicked" />
        <Button Text="Register" Clicked="OnRegisterClicked" />
    </StackLayout>
</ContentPage>