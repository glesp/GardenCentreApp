<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:GardenCentreApp.ViewModels"
             x:Class="GardenCentreApp.Pages.BasketPage">
    <ContentPage.BindingContext>
        <vm:BasketPageViewModel />
    </ContentPage.BindingContext>

    <StackLayout Padding="10">
        <Label Text="Shopping Basket" FontSize="24" HorizontalOptions="Center" />

        <CollectionView ItemsSource="{Binding BasketItems}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Orientation="Horizontal" Padding="10">
                        <Label Text="{Binding Product.Name}" FontSize="16" />
                        <Label Text="x" FontSize="16" />
                        <Label Text="{Binding Quantity}" FontSize="16" />
                        <Label Text="{Binding Product.Price, StringFormat='€{0:F2}'}" FontSize="16" />
                        <Button Text="Remove"
                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:BasketPageViewModel}}, Path=RemoveItemCommand}"
                                CommandParameter="{Binding}" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Label Text="{Binding TotalPrice, StringFormat='Total: €{0:F2}'}" FontSize="18" HorizontalOptions="Center" />

        <Button Text="Checkout" Command="{Binding CheckoutCommand}" HorizontalOptions="Center" />
    </StackLayout>
</ContentPage>