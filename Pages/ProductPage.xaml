<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GardenCentreApp.Pages.ProductPage">
    <StackLayout Padding="10">
        <Label Text="Product List" FontSize="24" HorizontalOptions="Center" />

        <ListView x:Name="ProductList" SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Padding="10">
                            <Label Text="{Binding Name}" FontSize="16" />
                            <Label Text="{Binding Price, StringFormat='â‚¬{0:F2}'}" FontSize="16" Margin="10,0,0,0" />
                            <Button Text="Add to Basket" Clicked="OnAddToBasketClicked" BindingContext="{Binding}" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Text="View Basket" Clicked="OnViewBasketClicked" HorizontalOptions="Center" Margin="10" />
    </StackLayout>
</ContentPage>