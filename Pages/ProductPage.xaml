<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:GardenCentreApp.ViewModels"
             x:Class="GardenCentreApp.Pages.ProductPage">
    <ContentPage.BindingContext>
        <vm:ProductPageViewModel />
    </ContentPage.BindingContext>

    <StackLayout Padding="10">
        <Label Text="Product List" FontSize="24" HorizontalOptions="Center" />

        <CollectionView ItemsSource="{Binding Products}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Orientation="Horizontal" Padding="10">
                        <Label Text="{Binding Name}" FontSize="16" VerticalOptions="Center" />
                        <Label Text="{Binding Price, StringFormat='â‚¬{0:F2}'}" FontSize="16" Margin="10,0,0,0" VerticalOptions="Center" />
                        <Button Text="Add to Basket"
                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ProductPageViewModel}}, Path=AddToBasketCommand}"
                                CommandParameter="{Binding}" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="View Basket" Command="{Binding ViewBasketCommand}" HorizontalOptions="Center" Margin="10" />
    </StackLayout>
</ContentPage>