<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:GardenCentreApp.ViewModels"
             x:Class="GardenCentreApp.Pages.ProductPage"
             BackgroundColor="White">
    <ContentPage.BindingContext>
        <vm:ProductPageViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="Auto, *" Padding="10">
        <!-- Category Carousel -->
        <CarouselView ItemsSource="{Binding Categories}" 
                      CurrentItem="{Binding SelectedCategory, Mode=TwoWay}"
                      HeightRequest="60" Margin="0,0,0,10">
            <CarouselView.ItemTemplate>
                <DataTemplate>
                    <Frame BackgroundColor="#007AFF" Padding="10" CornerRadius="15" Margin="5">
                        <Label Text="{Binding}" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center" />
                    </Frame>
                </DataTemplate>
            </CarouselView.ItemTemplate>
        </CarouselView>

        <!-- Products for Selected Category -->
        <CollectionView Grid.Row="1" Margin="0,10,0,0"
                        ItemsSource="{Binding Products}" 
                        SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Padding="10" Spacing="10">
                        <Image Source="{Binding Image}" WidthRequest="100" HeightRequest="100" />
                        <Label Text="{Binding Name}" FontSize="16" TextColor="Black" />
                        <Label Text="{Binding Price, StringFormat='â‚¬{0:F2}'}" FontSize="14" TextColor="Gray" />
                        <Button Text="Add to Basket"
                                BackgroundColor="#007AFF"
                                TextColor="White"
                                CornerRadius="10"
                                Padding="10"
                                HeightRequest="50"
                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ProductPageViewModel}}, Path=AddToBasketCommand}"
                                CommandParameter="{Binding}" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
