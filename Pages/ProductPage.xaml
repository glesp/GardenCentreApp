<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:GardenCentreApp.ViewModels"
             x:Class="GardenCentreApp.Pages.ProductPage"
             BackgroundColor="White">
    <ContentPage.BindingContext>
        <vm:ProductPageViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="20">

            <!-- Category Tabs -->
            <ScrollView Orientation="Horizontal">
                <HorizontalStackLayout Spacing="5">
                    <BindableLayout.ItemsSource>
                        <Binding Path="Categories" />
                    </BindableLayout.ItemsSource>
                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <Button Text="{Binding}"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ProductPageViewModel}}, Path=ChangeCategoryCommand}"
                                    CommandParameter="{Binding}"
                                    BackgroundColor="LightGray"
                                    TextColor="Black"
                                    FontSize="14"
                                    Padding="5"
                                    CornerRadius="20"
                                    WidthRequest="100"
                                    HeightRequest="40" />
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </HorizontalStackLayout>
            </ScrollView>

            <!-- Product List -->
            <CollectionView ItemsSource="{Binding Products}" SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Padding="10" Spacing="10">
                            <Image Source="{Binding Image}" WidthRequest="100" HeightRequest="100" />
                            <Label Text="{Binding Name}" FontSize="16" TextColor="Black" />
                            <Label Text="{Binding Price, StringFormat='â‚¬{0:F2}'}" FontSize="14" TextColor="Gray" />
                            <Button Text="Add to Basket"
                                    BackgroundColor="#007AFF"
                                    TextColor="White"
                                    CornerRadius="10"
                                    Padding="10"
                                    HeightRequest="50"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ProductPageViewModel}}, Path=AddToBasketCommand}"
                                    CommandParameter="{Binding}" />
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button Text="Go to Basket"
                    BackgroundColor="#007AFF"
                    TextColor="White"
                    FontSize="18"
                    HeightRequest="50"
                    Command="{Binding GoToBasketCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>